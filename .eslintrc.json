{
  "env": {
    "node": true,
    "browser": true,
    "es2021": true
  },

  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:react/recommended"
  ],

  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "js": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "linebreak-style": 0,
    "react/display-name": "off",
    "react/prop-types": "off",
    "no-unused-vars": 0
  }
}
